@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#563d7c">
    <title>@ViewBag.Title</title>
    <style></style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        $('a[href^="#"]').bind('click.smoothscroll', function (e)
        {
            e.preventDefault();
 
            var target = this.hash,
                $target = $(target);
 
                $('html, body').stop().animate({
                'scrollTop': $target.offset().top
                }, 500, 'swing', function () {
                window.location.hash = target;
                });
        });
    </script>
</head>
<body>
    <div class="d-flex align-items-center p-1 px-md-1 mb-0 bg-white border-bottom">
            <nav class=" my-md-0 mr-md-0">
                <a class="p-3 text-dark" href="https://localhost:44343/">Главная</a>
                <a class="p-2 text-dark" href="#advantages">Плюсы</a>
            </nav>
            <a class="btn btn-outline-primary rounded-pill" href="https://localhost:44343/CheckFiles">Вход</a>
    </div>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - АИС верификации структурных документов</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>