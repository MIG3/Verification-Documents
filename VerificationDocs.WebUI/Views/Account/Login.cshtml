@*@model VerificationDocs.Domain.Entities.Security*@
@model VerificationDocs.WebUI.Models.LoginViewModel

@{
     ViewBag.Title = "Login";
     Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div>
        <div class=" white Center Slim " data-grid="col-12">
            <section class="m-area-heading">
                <h2 class="c-heading-3 ow-headinghelper-1 ">Авторизация</h2>
                <div data-grid="col-12"></div>
            </section>
        </div>
    </div>
    <div class="panel-body login-block">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @*<div class="input-group">*@
                    <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                    <label>Имя пользователя:</label>
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                @*</div>*@
            </div>
            <div class="form-group">
                @*<div class="input-group">*@
                    <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                    <label>Пароль:</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @*</div>*@
            </div>
            <input type="submit" value="Войти" class="btn btn-outline-primary col-md-offset-2 col-md-6" />
        }

    </div>
</div>
