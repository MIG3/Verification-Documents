@*@model VerificationDocs.Domain.Entities.Security*@
@model VerificationDocs.WebUI.Models.LoginViewModel

@{
     ViewBag.Title = "Login";
     Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .m-area-heading {
    padding-top: 25px;
    padding-bottom: 25px;
    text-align: center;
    }
    .login-block
    {
    background-color:#fff;
    padding:60px;
    -webkit-box-shadow:0 3px 50px 0 rgba(0,0,0,.1);
    box-shadow:0 3px 50px 0 rgba(0,0,0,.1);
    text-align:center;
    border-radius:5px
    }
    .login-block h*, .login-block h6
    {
    font-family:Open Sans,sans-serif;
    color:#96a2b2;
    letter-spacing:1px
    }
    .login-block h*
    {
    font-size:22px;
    margin-bottom:60px;
    margin-top:40px
    }
    .login-block .input-group-addon
    {
    color:#29aafe;
    font-size:19px;
    opacity:.5
    }
    .login-block .btn-block
    {
    margin-top:30px;
    padding:15px;
    background:#1a5486;
    border-color:#29aafe;
    }

    .login-block .hr-xs
    {
    margin-top:5px;
    margin-bottom:5px
    }
</style>
<div class="panel">
    <div>
        <div class=" white Center Slim " data-grid="col-12">
            <section class="m-area-heading">
                <h2 class="c-heading-3 ow-headinghelper-1 ">Вход в систему</h2>
                <div data-grid="col-12"></div>
            </section>
        </div>
    </div>
    <div class="panel-body login-block">
        <h5>Пожалуйста, войдите в систему, чтобы получить доступ к панели администратора</h5>
        @*<p class="lead">Пожалуйста, войдите в систему, чтобы получить доступ к панели администратора:</p>*@
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @*<div class="input-group">*@
                    <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                    <label>Имя пользователя:</label>
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                @*</div>*@
            </div>
            <div class="form-group">
                @*<div class="input-group">*@
                    <span class="input-group-addon"><i class="fa fa-user ti-user"></i></span>
                    <label>Пароль:</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @*</div>*@
            </div>
            <input type="submit" value="Войти" class="btn btn-primary btn-block" />
        }

            </div>
</div>
