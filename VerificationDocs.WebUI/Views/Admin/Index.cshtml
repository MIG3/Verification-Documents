@model IEnumerable<VerificationDocs.Domain.Entities.StyleP>

@{
    ViewBag.Title = "Админ панель: стиль абзацев";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Стили абзацев</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Название стиля</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ParagraphID</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.ParagraphID })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ParagraphID", item.ParagraphID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить запись", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>

